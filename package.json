{
  "name": "petforce",
  "version": "0.1.0",
  "private": true,
  "description": "PetForce - Pet care platform for families",
  "workspaces": [
    "apps/web",
    "apps/mobile",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "prepare": "husky",
    "db:migrate": "node packages/supabase/dist/cli.js migrate",
    "db:migrate:new": "node packages/supabase/dist/cli.js migrate:new",
    "db:migrate:status": "node packages/supabase/dist/cli.js migrate:status",
    "db:migrate:rollback": "node packages/supabase/dist/cli.js rollback",
    "db:types": "node packages/supabase/dist/cli.js types",
    "check:all": "npm run lint && npm run typecheck && npm test && npm run build",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "npm audit && npm run security:licenses",
    "security:licenses": "npx license-checker --summary --production",
    "release": "npm run check:all && npm version",
    "chuck:push": "./scripts/chuck-push",
    "chuck:validate": "./scripts/chuck validate-branch",
    "chuck:check": "./scripts/chuck check all",
    "chuck:pr": "./scripts/chuck pr validate",
    "branches:clean": "git branch --merged | grep -v '\\*\\|main\\|develop' | xargs -n 1 git branch -d",
    "git:status": "git status && git log --oneline -10",
    "git:sync": "git fetch --all --prune && git pull origin $(git rev-parse --abbrev-ref HEAD)"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@turbo/gen": "^1.11.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "packageManager": "npm@10.2.4",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@types/uuid": "^11.0.0",
    "uuid": "^13.0.0"
  }
}
