{
  "name": "petforce",
  "version": "0.1.0",
  "private": true,
  "description": "PetForce - Pet care platform for families",
  "workspaces": [
    "apps/web",
    "apps/mobile",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "db:migrate": "node packages/supabase/dist/cli.js migrate",
    "db:migrate:new": "node packages/supabase/dist/cli.js migrate:new",
    "db:migrate:status": "node packages/supabase/dist/cli.js migrate:status",
    "db:migrate:rollback": "node packages/supabase/dist/cli.js rollback",
    "db:types": "node packages/supabase/dist/cli.js types"
  },
  "devDependencies": {
    "@turbo/gen": "^1.11.2",
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "packageManager": "npm@10.2.4",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@types/uuid": "^11.0.0",
    "uuid": "^13.0.0"
  }
}
