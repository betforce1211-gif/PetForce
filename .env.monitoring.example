# Monitoring Configuration
# Copy this to your .env file and configure for your environment

# Monitoring Backend
# Options: datadog, sentry, cloudwatch, console
# Default: console (for development)
MONITORING_BACKEND=console

# API Key / DSN
# - Datadog: Get from https://app.datadoghq.com/account/settings#api
# - Sentry: Get DSN from project settings (format: https://xxx@sentry.io/xxx)
# - CloudWatch: Use AWS credentials
# - Console: Not required
MONITORING_API_KEY=

# Environment
# Options: development, staging, production
NODE_ENV=development

# Service Name
# Used for tagging in monitoring service
SERVICE_NAME=petforce-auth

# Example Production Configuration (Datadog)
# MONITORING_BACKEND=datadog
# MONITORING_API_KEY=your_datadog_api_key_here
# NODE_ENV=production
# SERVICE_NAME=petforce-auth

# Example Production Configuration (Sentry)
# MONITORING_BACKEND=sentry
# MONITORING_API_KEY=https://your_key@sentry.io/your_project
# NODE_ENV=production
# SERVICE_NAME=petforce-auth
