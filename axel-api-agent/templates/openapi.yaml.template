# =============================================================================
# COMPONENTS
# =============================================================================

components:
  # ---------------------------------------------------------------------------
  # Security Schemes
  # ---------------------------------------------------------------------------
  securitySchemes:
    ApiKeyAuth:
      type: apiKey
      in: header
      name: X-API-Key
      description: "API key for server-to-server authentication"
      
    BearerAuth:
      type: http
      scheme: bearer
      bearerFormat: JWT
      description: "JWT token for user authentication"

  # ---------------------------------------------------------------------------
  # Parameters
  # ---------------------------------------------------------------------------
  parameters:
    LimitParam:
      name: limit
      in: query
      description: "Number of items to return (max 100)"
      schema:
        type: integer
        minimum: 1
        maximum: 100
        default: 20
        
    CursorParam:
      name: cursor
      in: query
      description: "Pagination cursor from previous response"
      schema:
        type: string
        
    SortParam:
      name: sort
      in: query
      description: "Sort field (prefix with - for descending)"
      schema:
        type: string
      example: "-created_at"

  # ---------------------------------------------------------------------------
  # Headers
  # ---------------------------------------------------------------------------
  headers:
    X-RateLimit-Limit:
      description: "Maximum requests per window"
      schema:
        type: integer
        example: 1000
        
    X-RateLimit-Remaining:
      description: "Requests remaining in current window"
      schema:
        type: integer
        example: 999
        
    X-RateLimit-Reset:
      description: "Unix timestamp when window resets"
      schema:
        type: integer
        example: 1704067200
        
    Retry-After:
      description: "Seconds until retry allowed"
      schema:
        type: integer
        example: 60

  # ---------------------------------------------------------------------------
  # Responses
  # ---------------------------------------------------------------------------
  responses:
    BadRequest:
      description: "Bad request - malformed syntax"
      content:
        application/json:
          schema:
            $ref: '#/components/schemas/Error'
          example:
            error:
              code: "bad_request"
              message: "Invalid JSON in request body"
              request_id: "req_abc123"
              
    Unauthorized:
      description: "Authentication required"
      content:
        application/json:
          schema:
            $ref: '#/components/schemas/Error'
          example:
            error:
              code: "unauthorized"
              message: "Invalid or missing authentication"
              request_id: "req_abc123"
              
    Forbidden:
      description: "Access denied"
      content:
        application/json:
          schema:
            $ref: '#/components/schemas/Error'
          example:
            error:
              code: "forbidden"
              message: "You do not have permission to access this resource"
              request_id: "req_abc123"
              
    NotFound:
      description: "Resource not found"
      content:
        application/json:
          schema:
            $ref: '#/components/schemas/Error'
          example:
            error:
              code: "not_found"
              message: "{{RESOURCE_SINGULAR}} not found"
              request_id: "req_abc123"
              
    Conflict:
      description: "Resource conflict"
      content:
        application/json:
          schema:
            $ref: '#/components/schemas/Error'
          example:
            error:
              code: "conflict"
              message: "Resource has been modified by another request"
              request_id: "req_abc123"
              
    ValidationError:
      description: "Validation failed"
      content:
        application/json:
          schema:
            $ref: '#/components/schemas/ValidationError'
          example:
            error:
              code: "validation_error"
              message: "Validation failed"
              request_id: "req_abc123"
              fields:
                - field: "email"
                  message: "Must be a valid email address"
                  code: "invalid_format"
                  
    RateLimited:
      description: "Rate limit exceeded"
      content:
        application/json:
          schema:
            $ref: '#/components/schemas/Error'
          example:
            error:
              code: "rate_limited"
              message: "Rate limit exceeded. Retry after 60 seconds."
              request_id: "req_abc123"
      headers:
        X-RateLimit-Limit:
          $ref: '#/components/headers/X-RateLimit-Limit'
        X-RateLimit-Remaining:
          $ref: '#/components/headers/X-RateLimit-Remaining'
        X-RateLimit-Reset:
          $ref: '#/components/headers/X-RateLimit-Reset'
        Retry-After:
          $ref: '#/components/headers/Retry-After'

  # ---------------------------------------------------------------------------
  # Schemas
  # ---------------------------------------------------------------------------
  schemas:
    # Base resource schema
    {{RESOURCE_PASCAL}}:
      type: object
      required:
        - id
        - name
        - created_at
        - updated_at
      properties:
        id:
          type: string
          description: "Unique identifier"
          example: "{{RESOURCE_SINGULAR}}_abc123"
          readOnly: true
        name:
          type: string
          description: "{{RESOURCE_SINGULAR}} name"
          example: "Example {{RESOURCE_SINGULAR}}"
        # Add more fields as needed
        created_at:
          type: string
          format: date-time
          description: "Creation timestamp"
          readOnly: true
        updated_at:
          type: string
          format: date-time
          description: "Last update timestamp"
          readOnly: true
          
    # Create request schema
    Create{{RESOURCE_PASCAL}}Request:
      type: object
      required:
        - name
      properties:
        name:
          type: string
          description: "{{RESOURCE_SINGULAR}} name"
          minLength: 1
          maxLength: 255
        # Add more fields as needed
        
    # Update request schema
    Update{{RESOURCE_PASCAL}}Request:
      type: object
      properties:
        name:
          type: string
          description: "{{RESOURCE_SINGULAR}} name"
          minLength: 1
          maxLength: 255
        # Add more fields as needed
        
    # List response schema
    {{RESOURCE_PASCAL}}List:
      type: object
      required:
        - data
        - meta
      properties:
        data:
          type: array
          items:
            $ref: '#/components/schemas/{{RESOURCE_PASCAL}}'
        meta:
          $ref: '#/components/schemas/PaginationMeta'
          
    # Pagination meta
    PaginationMeta:
      type: object
      required:
        - has_more
      properties:
        has_more:
          type: boolean
          description: "Whether more results exist"
        next_cursor:
          type: string
          description: "Cursor for next page"
          nullable: true
        prev_cursor:
          type: string
          description: "Cursor for previous page"
          nullable: true
        total:
          type: integer
          description: "Total count (if available)"
          
    # Error schema
    Error:
      type: object
      required:
        - error
      properties:
        error:
          type: object
          required:
            - code
            - message
          properties:
            code:
              type: string
              description: "Machine-readable error code"
            message:
              type: string
              description: "Human-readable error message"
            request_id:
              type: string
              description: "Request ID for debugging"
            documentation_url:
              type: string
              format: uri
              description: "Link to error documentation"
              
    # Validation error schema
    ValidationError:
      type: object
      required:
        - error
      properties:
        error:
          type: object
          required:
            - code
            - message
            - fields
          properties:
            code:
              type: string
              example: "validation_error"
            message:
              type: string
              example: "Validation failed"
            request_id:
              type: string
            fields:
              type: array
              items:
                type: object
                required:
                  - field
                  - message
                  - code
                properties:
                  field:
                    type: string
                    description: "Field path"
                  message:
                    type: string
                    description: "Error message"
                  code:
                    type: string
                    description: "Error code"

